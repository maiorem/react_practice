package com.example.demo;

import static org.assertj.core.api.Assertions.assertThat;

import java.util.List;

import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;

import com.example.demo.entity.BoardDto;
import com.example.demo.entity.BoardRepository;

@SpringBootTest
public class BoardTest {
	@Autowired
    BoardRepository BoardDtoRepository;

    @Test
    void save() {

        // 1. 게시글 파라미터 생성
        BoardDto params = BoardDto.builder()
                .title("1번 게시글 제목")
                .content("1번 게시글 내용")
                .writer("도뎡이")
                .hits(0)
                .deleteYn('N')
                .build();

        // 2. 게시글 저장
        BoardDtoRepository.save(params);

        // 3. 1번 게시글 정보 조회
        BoardDto entity = BoardDtoRepository.findById((long) 1).get();
        assertThat(entity.getTitle()).isEqualTo("1번 게시글 제목");
        assertThat(entity.getContent()).isEqualTo("1번 게시글 내용");
        assertThat(entity.getWriter()).isEqualTo("도뎡이");
    }

    @Test
    void findAll() {

        // 1. 전체 게시글 수 조회
        long BoardDtosCount = BoardDtoRepository.count();

        // 2. 전체 게시글 리스트 조회
        List<BoardDto> BoardDtos = BoardDtoRepository.findAll();
    }

    @Test
    void delete() {

        // 1. 게시글 조회
        BoardDto entity = BoardDtoRepository.findById((long) 1).get();

        // 2. 게시글 삭제
        BoardDtoRepository.delete(entity);
    }
}
